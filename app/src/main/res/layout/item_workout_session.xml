<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Date Section -->
        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/date_background"
            android:padding="8dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lun, 15"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                tools:text="Lun, 15" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:30"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif-bold"
                tools:text="18:30" />

        </LinearLayout>

        <!-- Session Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session d'entraÃ®nement"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"
                tools:text="Push Day" />

            <TextView
                android:id="@+id/tvRelativeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aujourd'hui"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"
                tools:text="Hier" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 min"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        tools:text="45 min" />

                </LinearLayout>

                <!-- Calories -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_fire"
                        app:tint="@color/warning_orange"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="338 cal"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        tools:text="338 cal" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer"
            app:tint="@color/error_red"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>